{% extends 'base.html.twig' %}

{% block title %}Web Boutique - {{ product.name }}{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-5">
            <img src="{{ asset('uploads/' ~ product.illustration) }}" alt="" class="img-fluid">
        </div>
        <div class="col-md-7 my-auto">
            <h1>{{ product.name }}</h1>
            {{ (product.price / 100)|number_format(2, ',', '.') }} EUR
            <hr>
            <p>
                {{ product.description }}
            </p>
            <a href="{{ path('add_to_cart', {'id': product.id}) }}" class="btn btn-primary">Ajouter au panier</a>
            {# {{ dump(product) }} #}
        </div>
    </div>
{% endblock %}
