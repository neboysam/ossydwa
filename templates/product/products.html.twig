{% extends 'base.html.twig' %}

{% block title %}Nos produits - Web Boutique{% endblock %}

{% block content %}
    
    <div class="row">
        <div class="col-md-3">
            <h3>Recherche</h3>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <h1>Nos produits</h1>
            <div class="row product-container">
                {% for product in products %}
                    <div class="col-md-4 mb-5">
                        <div class="text-center">
                            <h5>{{ product.name|upper }}</h5>
                            <span>{{ product.subtitle }}</span>
                            <a href="{{ path('product', { 'slug' : product.slug }) }}"><img src="{{ asset('/uploads/' ~ product.illustration) }}" alt="{{ product.name }}" class="img-fluid"></a>
                            {{ (product.price / 100)|number_format(2, ',', '.') }} EUR
                        </div>
                    </div>
                {% endfor %}
            </div>
        <div>
    </div>
    
{% endblock %}
